<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme"
    android:orientation="vertical">

    <include layout="@layout/toolbar_inner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_theme"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="How to create your items"
                android:textColor="@color/light_theme_color"
                android:textSize="@dimen/sp_20"
                app:typeface="helvetica_Bold.ttf" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/selectphoto" />

                <LinearLayout
                    android:id="@+id/rightlayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_toEndOf="@+id/image2"
                    android:layout_toRightOf="@+id/image2"
                    android:orientation="vertical">

                    <com.firefighterscalendar.custom.CustomTextView
                        android:id="@+id/txtStep2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step2"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="helvetica_Bold.ttf" />

                    <com.firefighterscalendar.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Select photos to light up your greeting card or calender. You can use any photos you have purchased already."
                        android:textColor="@color/white_dark"
                        android:textSize="12sp"
                        app:typeface="helvetica_ttf" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/addtext" />

                <LinearLayout
                    android:id="@+id/rightlayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_toEndOf="@+id/image3"
                    android:layout_toRightOf="@+id/image3"
                    android:orientation="vertical">

                    <com.firefighterscalendar.custom.CustomTextView
                        android:id="@+id/txtStep3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="helvetica_Bold.ttf" />

                    <com.firefighterscalendar.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Want to personlise your greeting card? Use your words to add that extra spark to your greetings card or printable calender."
                        android:textColor="@color/white_dark"
                        android:textSize="@dimen/sp_12"
                        app:typeface="helvetica_ttf" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/payandplaceorder" />

                <LinearLayout
                    android:id="@+id/rightlayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_toEndOf="@+id/image4"
                    android:layout_toRightOf="@+id/image4"
                    android:orientation="vertical">

                    <com.firefighterscalendar.custom.CustomTextView
                        android:id="@+id/txtStep4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step4"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_14"
                        app:typeface="helvetica_Bold.ttf" />

                    <com.firefighterscalendar.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Place your order and our firefighters will run it down the pole, into our fire delivery truck and blaze it straight on over to you."
                        android:textColor="@color/white_dark"
                        android:textSize="@dimen/sp_12"
                        app:typeface="helvetica_ttf" />

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageStartCreating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/start_creating" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
