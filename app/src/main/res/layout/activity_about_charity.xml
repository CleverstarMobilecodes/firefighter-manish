<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme"
    android:orientation="vertical">

    <include layout="@layout/toolbar_inner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_25"
            android:orientation="vertical"
            android:paddingBottom="35dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/about_charity_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#3A5569" />

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="About the"
                android:textColor="#1D679D"
                android:textSize="@dimen/sp_18"
                vFont:typeface="helvetica_Bold.ttf" />

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Children Hospital Foundation"
                android:textColor="@color/white_light"
                android:textSize="@dimen/sp_18"
                vFont:typeface="helvetica_Bold.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo_android" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/tvaboutcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#61646B"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="helvetica_ttf" />

            </LinearLayout>

            <com.firefighterscalendar.custom.CustomTextView
                android:id="@+id/tvaboutcontentFooter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Everything we do is for the kids â€“ to make them laugh and smile, to get better and to go home sooner because every child deserves the chance to grow up and make a lifetime of memories."
                android:textColor="@color/white_light"
                android:textSize="@dimen/sp_12"
                vFont:typeface="helvetica_ttf" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>