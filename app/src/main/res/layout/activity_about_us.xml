<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme"
    android:orientation="vertical">

    <include layout="@layout/toolbar_inner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_15"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/aboutbaner" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#3A5569" />

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="About the"
                android:textColor="#D4D5D5"
                android:textSize="@dimen/sp_18"
                vFont:typeface="helvetica_Bold.ttf" />

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Firefighters Calendar"
                android:textColor="#F04047"
                android:textSize="@dimen/sp_18"
                vFont:typeface="helvetica_Bold.ttf" />


            <com.firefighterscalendar.custom.CustomTextView
                android:id="@+id/tvaboutcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#61646B"
                android:textSize="@dimen/sp_12"
                vFont:typeface="helvetica_ttf" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>