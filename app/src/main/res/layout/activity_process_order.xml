<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_theme"
    android:orientation="vertical">

    <include layout="@layout/toolbar_inner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="Confirmation"
                android:textColor="@color/font_light_blue"
                android:textSize="@dimen/sp_24"
                vFont:typeface="helvetica_light_ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_highlited"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textThankyou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_20"
                    vFont:typeface="helvetica_Bold.ttf" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your order has been placed"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18"
                    vFont:typeface="helvetica_light_ttf" />

                <ImageView
                    android:id="@+id/imageThemePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:src="@drawable/truck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textShippingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18"
                    vFont:typeface="helvetica_Bold.ttf" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textShippingAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="helvetica_ttf" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textReviewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@color/light_highlited"
                    android:drawableLeft="@drawable/leftarrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:text="Review your Order"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="helvetica_ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_theme" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textKeepShopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_highlited"
                    android:drawableLeft="@drawable/leftarrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:text="Keep Shopping"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="helvetica_ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_theme" />

                <com.firefighterscalendar.custom.CustomTextView
                    android:id="@+id/textHomeScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_highlited"
                    android:drawableLeft="@drawable/leftarrow"
                    android:drawablePadding="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:text="Back to home screen"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="helvetica_ttf" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>