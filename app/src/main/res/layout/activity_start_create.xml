<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_inner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layoutCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/createimage"/>

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/create"
                android:gravity="center"
                android:text="CREATE"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                app:typeface="helvetica_ttf"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_theme_color"/>

        <FrameLayout
            android:id="@+id/layoutSaved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/savedimage"/>

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/saved"
                android:gravity="center"
                android:text="SAVED"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                app:typeface="helvetica_ttf"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_theme_color"/>

        <FrameLayout
            android:id="@+id/layoutHowTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/howtoimage"/>

            <com.firefighterscalendar.custom.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/howto"
                android:gravity="center"
                android:text="HOW TO"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                app:typeface="helvetica_ttf"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
