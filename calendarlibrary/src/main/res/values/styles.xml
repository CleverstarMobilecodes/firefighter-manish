<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MonthTitle">
        <item name="android:textSize">@dimen/roboto_calendar_date_title_font</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="DayOfTheWeek">
        <item name="android:textSize">@dimen/roboto_calendar_day_of_week_font</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_month</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="DayOfTheMonth">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/roboto_calendar_day_of_month</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>